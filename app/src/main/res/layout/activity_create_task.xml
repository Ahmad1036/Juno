<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CreateTaskActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Create Task"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_above="@+id/bottomButtons"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Task List Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Task List"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/dots_all_for_now_jl_family"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <Spinner
                        android:id="@+id/taskListSpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF" />

                    <ImageButton
                        android:id="@+id/addListButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_add"
                        android:tint="#FFFFFF"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Add new list" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Task Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Task Description"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/dots_all_for_now_jl_family"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/taskDescriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:background="@null"
                        android:gravity="top|start"
                        android:hint="Enter task description..."
                        android:textColorHint="#777777"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/dots_all_for_now_jl_family"
                        android:importantForAutofill="no"
                        android:inputType="textMultiLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageButton
                            android:id="@+id/voiceInputButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            android:src="@android:drawable/ic_btn_speak_now"
                            android:tint="#FFFFFF"
                            android:background="@drawable/circle_background"
                            android:contentDescription="Voice input" />

                        <ImageButton
                            android:id="@+id/cameraInputButton"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:tint="#FFFFFF"
                            android:background="@drawable/circle_background"
                            android:contentDescription="Camera input" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Image Preview (initially gone) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/imagePreviewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/taskImagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Task image" />

                    <ImageButton
                        android:id="@+id/removeImageButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:tint="#FFFFFF"
                        android:contentDescription="Remove image" />

                    <TextView
                        android:id="@+id/detectedObjectsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/taskImagePreview"
                        android:padding="8dp"
                        android:text="Detected: "
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/dots_all_for_now_jl_family"
                        android:textSize="12sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Date and Time -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Date and Time"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/dots_all_for_now_jl_family"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Date Selection -->
                    <LinearLayout
                        android:id="@+id/datePickerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/dateTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Today"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dots_all_for_now_jl_family"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Time Selection -->
                    <LinearLayout
                        android:id="@+id/timePickerLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/timeTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="No time set"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dots_all_for_now_jl_family"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Priority Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Priority"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/dots_all_for_now_jl_family"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Low Priority -->
                    <LinearLayout
                        android:id="@+id/lowPriorityButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/priority_button_background">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/priority_low_indicator"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dots_all_for_now_jl_family"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Medium Priority -->
                    <LinearLayout
                        android:id="@+id/mediumPriorityButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/priority_button_background">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/priority_medium_indicator"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dots_all_for_now_jl_family"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- High Priority -->
                    <LinearLayout
                        android:id="@+id/highPriorityButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/priority_button_background">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="@drawable/priority_high_indicator"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/dots_all_for_now_jl_family"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cancel_button_background"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/saveTaskButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@color/primary"
            android:text="Save Task"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout> 