<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp"
    tools:context=".ResetPasswordActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="JUNO"
        style="@style/TextStyle.DotsAllForNow.Title" />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="reset your password"
        style="@style/TextStyle.DotsAllForNow.Subtitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your reset token and new password"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:gravity="center"
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:layout_marginBottom="32dp" />

        <!-- Token Input -->
        <EditText
            android:id="@+id/token_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="reset token"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/dotted_border"
            android:padding="16dp"
            android:layout_marginBottom="16dp" 
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="16sp"/>

        <!-- New Password Input -->
        <EditText
            android:id="@+id/new_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="new password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/dotted_border"
            android:padding="16dp"
            android:layout_marginBottom="16dp" 
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="16sp"/>
            
        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/confirm_password_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="confirm new password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:background="@drawable/dotted_border"
            android:padding="16dp"
            android:layout_marginBottom="24dp" 
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="16sp"/>

        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="update password"
            android:background="@drawable/dotted_button"
            android:textColor="#FFFFFF"
            android:padding="16dp"
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="16sp" />

        <!-- Back to Login Link -->
        <TextView
            android:id="@+id/back_to_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="back to sign in"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/dots_all_for_now_jl_family"
            android:textSize="14sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout> 