<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/dashboard_card_background">

    <View
        android:id="@+id/priority_indicator"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/task_details_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Task Title"
        android:textColor="@color/dashboard_text_primary"
        android:fontFamily="@font/dots_all_for_now_jl_family"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/task_details_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Jan 1, 2023 â€¢ 10:30 AM"
        android:textColor="@color/primary"
        android:fontFamily="@font/dots_all_for_now_jl_family"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toBottomOf="@+id/task_details_title" />

    <TextView
        android:id="@+id/task_details_priority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Priority: High"
        android:textColor="@color/dashboard_text_secondary"
        android:fontFamily="@font/dots_all_for_now_jl_family"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toBottomOf="@+id/task_details_date_time" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/dashboard_card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toBottomOf="@+id/task_details_priority" />

    <TextView
        android:id="@+id/task_details_description_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textColor="@color/dashboard_text_primary"
        android:fontFamily="@font/dots_all_for_now_jl_family"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/task_details_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Detailed description of the task goes here. This might be multiple lines long and describe what needs to be done."
        android:textColor="@color/dashboard_text_secondary"
        android:fontFamily="@font/dots_all_for_now_jl_family"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priority_indicator"
        app:layout_constraintTop_toBottomOf="@+id/task_details_description_label" />

</androidx.constraintlayout.widget.ConstraintLayout> 