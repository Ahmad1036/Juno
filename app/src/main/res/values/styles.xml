<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text styles using Dots All For Now JL font -->
    <style name="TextStyle.DotsAllForNow" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dots_all_for_now_jl_family</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextStyle.DotsAllForNow.Title">
        <item name="android:textSize">42sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.DotsAllForNow.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>

    <style name="TextStyle.DotsAllForNow.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Add the CustomChipStyle to the existing styles.xml file -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">#1A1A1A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="chipStrokeColor">#333333</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/dots_all_for_now_jl_family</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIconTint">#FFFFFF</item>
        <item name="chipIconTint">#AAAAAA</item>
        <item name="rippleColor">#333333</item>
    </style>
    
    <!-- Dark theme for AlertDialog -->
    <style name="DarkAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">#1A1A1A</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">@font/dots_all_for_now_jl_family</item>
        <item name="buttonBarPositiveButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DarkDialogButton</item>
    </style>
    
    <style name="DarkDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#2196F3</item>
        <item name="android:fontFamily">@font/dots_all_for_now_jl_family</item>
        <item name="rippleColor">#333333</item>
    </style>
    
    <!-- Dark theme for DatePickerDialog -->
    <style name="DarkDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">#2196F3</item>
        <item name="android:colorAccent">#2196F3</item>
        <item name="android:headerBackground">#1A1A1A</item>
        <item name="android:background">#1A1A1A</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/dots_all_for_now_jl_family</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorControlNormal">#AAAAAA</item>
        <item name="buttonBarPositiveButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DarkDialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/DarkDialogButton</item>
    </style>
</resources> 